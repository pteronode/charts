{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "addLabels": [
        "🚨 major"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "addLabels": [
        "✨ minor",
        "🛠️ patch"
      ]
    }
  ]
}
